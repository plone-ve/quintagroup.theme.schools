<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- The default theme, used for standard Plone web pages -->
    <theme href="index.html" css:if-content="#visual-portal-wrapper" />
    <notheme if="$ajax_load" />

    <!-- Add meta tags -->
    <replace theme="/html/head/title" content="/html/head/title"/>
    <replace theme="/html/head/base" content="/html/head/base" />

    <before content="/html/head/style | /html/head/script | /html/head/link" theme-children="/html/head" />


    <before theme='//*[@id="portal-header"]' content='//*[@class="topPortlets"]' />

    <copy attributes="href title" css:content='#portal-logo' css:theme="#portal-logo" />


<copy attributes="class" content='/html/body' theme='/html/body' />


<copy attributes="class" content='//*[@id="portal-top"]' theme='//*[@id="portal-top"]' />

    <after css:theme="#portal-logo" css:content="#portal-personaltools-wrapper" />
    <after css:theme="#portal-header" css:content="#portal-breadcrumbs" />
    <after css:theme="#portal-header" css:content="#portal-searchbox" />
    <after css:theme="#portal-header" css:content="#portal-siteactions" />



<copy attributes="class" content='//*[@id="portal-column-content"]' theme='//*[@id="portal-column-content"]' />
<copy attributes="class" content='//*[@id="portal-column-one"]' theme='//*[@id="portal-column-one"]' />
<copy attributes="class" content='//*[@id="portal-column-two"]' theme='//*[@id="portal-column-two"]' />


    <copy css:theme="#portal-column-two .visualPadding" css:content-children="#portal-column-two" />
    <copy css:theme="#portal-column-one .visualPadding" css:content-children="#portal-column-one" />


    <before theme='//*[@class="dContent"]' content='//*[@id="portal-globalnav"]' />
    <before theme='//*[@class="dContent"]' content='//*[@id="viewlet-above-content"]' />

<copy attributes="class" content='//*[@id="portal-columns"]' theme='//*[@id="portal-columns"]' />

    <drop css:content="div#viewlet-above-content div#portal-breadcrumbs" />
    <drop css:content="div#portal-searchbox .searchSection" />

    <replace css:content=".portletSearch dt.portletHeader">
        <dt class="portletHeader hiddenStructure">Search</dt>
    </replace>


    <replace css:content-children="div.carousel-banner">
        <xsl:copy-of select="node()"/><div id="carousel-over"></div>
    </replace>

    <copy theme='//*[@class="dContent"]' content-children='//*[@id="portal-column-content"]/div[2]' />
    <after theme='//*[@class="dContent"]' content='//*[@id="viewlet-below-content"]' />

        <!-- replace css:content='.documentEditable' css:theme='#content' css:if-content=".documentEditable" /-->

<!-- replace css:content='.documentEditable' css:theme='dContent' css:if-content=".documentEditable" / -->


<merge attributes="class" css:content=".documentEditable" css:theme=".dContent" />  

<copy attributes="class" content='//*[@id="portal-footer"]' theme='//*[@id="portal-footer"]' />

    <copy theme='//*[@id="portal-footer"]' content='//*[@id="portal-footer"]/*' />
    <copy theme='//*[@id="portal-colophon"]' content='//*[@id="portal-colophon"]/*' />

</rules>
