<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <theme href="index.html" />
    <notheme if-path="aq_parent" />
    <notheme if-path="emptypage/" />
    <notheme if-path="error_log" />
    <notheme if-path="image_view_fullscreen/" />
    <notheme if-path="manage/" />
    <notheme css:if-content="#personaltools-plone_setup" />
    <notheme if-content="not(//*[@id='portal-columns'])" />
    <notheme if-path="presentation_view"/>
    <notheme if-path="source_editor.htm"/>
    <notheme if-path="ploneimage.htm"/>
    <notheme if-path="anchor.htm"/>
    <notheme if-path="table.htm"/><notheme if-path="attributes.htm"/>

    <replace theme="/html/head/title" content="/html/head/title"/>
    <replace theme="/html/head/base" content="/html/head/base" />

    <before content="/html/head/style | /html/head/script | /html/head/link" theme-children="/html/head" />

    <rules css:if-content="body.template-search,body.template-search_form,body.template-overview-controlpanel">
    </rules>

    <before theme='//*[@id="portal-header"]' content='//*[@class="topPortlets"]' />

    <copy attributes="href title" css:content='#portal-logo' css:theme="#portal-logo" />

    <after css:theme="#portal-logo" css:content="#portal-personaltools-wrapper" />
    <after css:theme="#portal-header" css:content="#portal-breadcrumbs" />
    <after css:theme="#portal-header" css:content="#portal-searchbox" />
    <after css:theme="#portal-header" css:content="#portal-siteactions" />

    <after css:theme="#visual-column-wrapper" css:content="#portal-column-two" />
    <after css:theme="#portal-column-content" css:content="#portal-column-one" />

    <before theme='//*[@class="dContent"]' content='//*[@id="portal-globalnav"]' />
    <before theme='//*[@class="dContent"]' content='//*[@id="viewlet-above-content"]' />

    <replace css:content-children="div.carousel-banner">
        <xsl:copy-of select="node()"/><div id="carousel-over"></div>
    </replace>

    <replace theme='//*[@class="dContent"]' content='//*[@id="content-wrapper"]/div[2]' />
    <after theme='//*[@class="dContent"]' content='//*[@id="viewlet-below-content"]' />

    <copy theme='//*[@id="portal-footer"]' content='//*[@id="portal-footer"]/*' />
    <copy theme='//*[@id="portal-colophon"]' content='//*[@id="portal-colophon"]/*' />

</rules>
